<%- include('./includes/head.ejs') %>
    <link rel="stylesheet" href="/css/auth.css">
    </head>
    <%- include('./includes/nav.ejs') %>

        <body>
            <div class="container">
                <h3 class="center">Add new lyrics <i class="fas fa-music"></i></h3>
                <h2>Hi
                    <%=name%>!
                </h2>
                <div class="row">
                    <form action="/songs" method="post" class="col-12">
                        <div class="row">
                            <div class="input-field col s6">
                                <input required id="title" type="text" name="title">
                                <label for="title">Last Name</label>
                            </div>
                            <div class="input-field col s6">
                                <input required id="author" type="text" name="author">
                                <label for="author">Author</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <textarea required id="lyrics" name="lyrics" class="materialize-textarea"></textarea>
                                <!-- <label for="lyrics">Song lyrics...</label> -->
                            </div>
                        </div>
                        <div class="row">
                            <input type="submit" value="Save" class="btn waves-effect waves-light">
                        </div>
                    </form>
                </div>
            </div>

            <%- include('./includes/end.ejs') %>
<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/auth.css">
    </head>
    <%- include('../includes/nav.ejs') %>

        <body>
            <div class="container">
                <h3 class="center">User Songs <i class="fas fa-music"></i></h3>
                <h2>Hi
                    <%=name%>!
                </h2>
                <%if(songs.length<=0){%>
                    <h2 class="header">Empty list.</h2>
                    <p class="grey-text text-darken-3 lighten-3">There are no songs here.</p>
                    <%}else{%>

                        <table class="striped">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Author</th>
                                    <th>Created At</th>
                                    <th>Edit Song</th>
                                    <th>Delete Song</th>
                                </tr>
                            </thead>

                            <tbody>
                                <% songs.forEach(s => { %>
                                    <tr>
                                        <td>
                                            <%= s.title %>
                                        </td>
                                        <td>
                                            <%= s.author %>
                                        </td>
                                        <td>
                                            <%= JSON.stringify(new Date(s.createdAt)).slice(1,11) %>
                                        </td>
                                        <td>
                                            <a href="/songs/edit/<%= s._id %>" class="waves-effect waves-light btn"><i class="fas fa-edit"></i></a>
                                        </td>
                                        <td>
                                            <form action="/songs/<%=s._id%>" method="POST">
                                                <input type="hidden" name="_method" value="DELETE">
                                                <button type="submit" class="btn red"><i class="fas fa-trash-alt"></i></button>
                                            </form>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>



                        <%}%>
            </div>

            <%- include('../includes/end.ejs') %>
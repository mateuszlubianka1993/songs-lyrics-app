<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/auth.css">
    </head>
    <%- include('../includes/nav.ejs') %>

        <body>
            <div class="container">
                <h3 class="center">Edit song lyrics <i class="fas fa-music"></i></h3>

                <div class="row">
                    <form action="/songs/<%=song._id%>" method="post" class="col-12">
                        <input type="hidden" name="_method" value="PUT">
                        <div class="row">
                            <div class="input-field col s6">
                                <input required id="title" type="text" name="title" value="<%=song.title%>">
                                <label for="title">Title</label>
                            </div>
                            <div class="input-field col s6">
                                <input required id="author" type="text" name="author" value="<%=song.author%>">
                                <label for="author">Author</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <textarea required id="lyrics" name="lyrics" class="materialize-textarea"><%=song.lyrics%></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <input type="submit" value="Save" class="btn waves-effect waves-light green darken-4">
                        </div>
                    </form>
                </div>
            </div>
            <script src="https://cdn.ckeditor.com/4.15.0/standard/ckeditor.js"></script>
            <script src="/js/add-song.js"></script>
            <%- include('../includes/end.ejs') %>
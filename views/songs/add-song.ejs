<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/auth.css">
    </head>
    <%- include('../includes/nav.ejs') %>

        <body>
            <div class="container">
                <h3 class="center">Add new lyrics <i class="fas fa-music green-text text-darken-4"></i></h3>
                <h2>Hi
                    <%=name%>!
                </h2>
                <div class="row">
                    <form action="/songs" method="post" class="col-12">
                        <div class="row">
                            <div class="input-field col s10 m8">
                                <input required id="title" type="text" name="title">
                                <label for="title">Title</label>
                            </div>
                            <div class="input-field col s10 m8">
                                <input required id="author" type="text" name="author">
                                <label for="author">Author</label>
                            </div>
                            <div class="input-field col s10 m8">
                                <input required id="video" type="text" name="video" value="https://www.youtube.com/embed/">
                                <label for="video">Video link</label>
                                <span class="helper-text">Enter only the last part of the link after "v =".</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <textarea required id="lyrics" name="lyrics" class="materialize-textarea"></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <input type="submit" value="Save" class="btn waves-effect waves-light green darken-4">
                        </div>
                    </form>
                </div>
            </div>
            <script src="https://cdn.ckeditor.com/4.15.0/standard/ckeditor.js"></script>
            <script src="/js/add-song.js"></script>
            <%- include('../includes/end.ejs') %>